{
  "name": "file-dedupe",
  "license": "CC0-1.0",
  "version": "0.1.0",
  "private": true,
  "description": "File Deduplication Tool",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.dedupe.freik",
    "productName": "File Deduplicator",
    "mac": {
      "icon": "static/icon.icns"
    }
  },
  "scripts": {
    "analyze": "er analyze",
    "release": "yarn prep-release && yarn opt-release && electron-builder --publish=always",
    "tryrel": "yarn prep-release && yarn opt-release && electron-builder --publish=never",
    "opt-release": "er minify -i -r build",
    "prep-release": "yarn clean && yarn release-build && rimraf build/main/__tests__",
    "clean": "rimraf public/main public/*.js public/*.js.map .ts*.tsbuildinfo build dist",
    "release-build": "er prepare -r && er build",
    "build": "er prepare && er build",
    "start": "er start 3001",
    "prepare": "er prepare",
    "types": "er types",
    "test": "er test",
    "testui": "jest --config config/jest.jsdom.js --watch",
    "testnode": "jest --config config/jest.node.js --watch",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\" \"static/**/*.ts\" \"config/*.js\" \"config/*.json\" \"*.json\" \"*.md\" \"src/**/*.css\" .prettierrc",
    "lint": "yarn eslint --fix --ext .ts --ext .tsx ./",
    "chk": "er check",
    "linecount": "git ls-files|grep \"\\.\\(css\\|ts\\|tsx\\)$\"|grep -v \"__\\|\\.d\\.ts\"|xargs wc -l",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@fluentui/font-icons-mdl2": "^8.5.5",
    "@fluentui/react": "^8.104.1",
    "@fluentui/react-hooks": "^8.6.14",
    "@freik/core-utils": "~1.2.0",
    "@freik/node-utils": "~1.2.3",
    "electron-is-dev": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "recoil": "^0.7.6",
    "xxhashjs": "^0.2.2"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-transform-react-jsx": "^7.20.7",
    "@freik/build-tools": "^3.4.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/jest": "^27.5.2",
    "@types/node": "^18.11.18",
    "@types/react": "^17.0.52",
    "@types/react-dom": "^17.0.18",
    "@types/react-test-renderer": "^17.0.2",
    "@types/xxhashjs": "^0.2.2",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "cross-env": "^7.0.3",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-react-devtools": "^0.5.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "27.5.1",
    "jest-transform-css": "^6.0.0",
    "postcss": "8.4.20",
    "prettier": "^2.8.1",
    "react-scripts": "^5.0.1",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "svg-react-loader": "^0.4.6",
    "ts-jest": "27.1.5",
    "typescript": "^4.9.4",
    "wait-on": "^7.0.1"
  },
  "packageManager": "yarn@3.1.0"
}
